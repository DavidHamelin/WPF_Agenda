<Page x:Class="ClientLourd_Agenda.addCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientLourd_Agenda"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="addCustomer" Background="LightBlue">

    <Grid>
        <StackPanel Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Foreground="White" FontWeight="Bold" FontSize="18" Margin="0,0,0,10">Ajouter un client</TextBlock>
            <Label Content="Nom"/>
            <TextBox x:Name="CustomerLastName"/>
            <Label Content="Prénom"/>
            <TextBox x:Name="CustomerFirstName"/>
            <Label Content="Mail"/>
            <TextBox x:Name="CustomerMail"/>
            <Label Content="Tel"/>
            <TextBox x:Name="CustomerPhone"/>
            <Label Content="Budget"/>
            <TextBox x:Name="CustomerBudget"/>
            <Label Content="Sujet"/>
            <TextBox x:Name="CustomerSubject"/>
            <Button x:Name="Save" Width="100" Margin="0,20,0,5" Click="Save_Click">Enregistrer</Button>
            <Button x:Name="Cancel" Width="100">Annuler</Button>
        </StackPanel>
    </Grid>
</Page>
